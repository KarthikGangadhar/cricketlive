<% if ball["event_string"].present? &&  ball["runs"].present?  && ball["wickets"].present? %>
<div class="cl-com-ovr-sum-rw bg-light-gray">
	<div class="cl-com-ovr-sum-itm-8" style="min-height:33px;">
		<%= ball["over_number"] %>
	</div>
	<div class="cl-com-ovr-sum-itm-25">
		<div>
			Runs Scored: <span class="cl-text-bold" ><%= ball["event_string"] %></span>
		</div>
	</div>
	<div class="cl-com-ovr-sum-itm-25">
			Score after <%= ball["over_number"] %> overs
		<div class="cl-text-bold" >
			 <%= getTeamName( team , ball['team_id'])%> <%= ball["runs"] %>-<%= ball["wickets"]%>
		</div>
	</div>
	<div class="cl-com-ovr-sum-itm-25">
		<% if ball['batsman'].present? %>
		<% ball['batsman'].each do |batsman|%>
			<div class="cl-col-67">
				<%= getPlayerForOverUpdate(team, batsman['pid'])%>
			</div>
			<div class="cl-col-binding">
				<%= batsman['runs'] %>(<%= batsman['balls_faced'] %>)
			</div>
		<% end %>
		<% end %>
	</div>
	<div class="cl-com-ovr-sum-itm-17">
		<% if ball['bowler'].present? %>
		<% ball['bowler'].each do |bowler|%>
			<% if bowler['live_current_name'].upcase == "CURRENT BOWLER"%>
			<div><%= getPlayerForOverUpdate(team, bowler['pid']) %></div>
			<div><%= ball['bowler'][0]['overs'] %>-<%= ball['bowler'][0]['maidens'] %>-<%= ball['bowler'][0]['wickets'] %>-<%= ball['bowler'][0]['conceded'] %></div>
			<% end %>
		<% end %>	
		<% end %>	
	</div>
</div>
<% end %>
